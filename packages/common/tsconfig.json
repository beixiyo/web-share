{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}